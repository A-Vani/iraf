# Make the TABLES external package
#
# Author: L. Willard, 6-June-1989 from the NOAO mkpkg
#

$ifeq (hostid, unix)  !(clear;date)  $endif
$call update
$ifeq (hostid, unix)  !(date)  $endif
$exit

linkonly:
	$call pkg

	$ifeq (HOSTID, vms) $purge [...] $endif
	$purge tablesbin$
	;


update:
	$call base
	$call pkg

	$ifeq (HOSTID, vms) $purge [...] $endif
	$purge tablesbin$
	;

base:
	$echo "===================== BASE ========================="
	$echo ""
	$call update@base
	;
pkg:
	$echo "===================== PKG ========================="
	$echo ""
	$call update@pkg
	;

# STRIP -- Strip the TABLES directories of all sources and other files not
# required to run the system, or for user programming.

strip:
	!rmfiles -f config/strip.tables
	;

# SUMMARY -- [UNIX] mkpkg summary: output a summary of the spooled mkpkg
# output, omitting most of the mundane chatter.  Used to scan large spool
# files for errors.

summary:
	$ifeq (HOSTID, unix)
	    ! grep -v ':$$' spool | grep -v '^xc' | grep -v '^ar'\
	    | grep -v '^check file'
	$else
	    $echo "mkpkg summary only available on a UNIX system"
	$endif
	;

# SUN/IRAF multiple architecture support.
# ----------------------------------------

arch:
showfloat:				# show current float option
	$verbose off
	!$(hscripts)/mkfloat.csh
	;
generic:				# make architecture indep. (no bins)
	$verbose off
	$set DIRS = "lib pkg"
	!$(hscripts)/mkfloat.csh generic -d $(DIRS)
	;
sparc:					# install sparc binaries
	$verbose off
	$set DIRS = "lib pkg"
	!$(hscripts)/mkfloat.csh sparc -d $(DIRS)
	;
ssun:					# install ssun (Solaris) binaries
	$verbose off
	$set DIRS = "lib pkg"
	!$(hscripts)/mkfloat.csh ssun -d $(DIRS)
	;
i386:					# install i386 binaries
	$verbose off
	$set DIRS = "lib pkg"
	!$(hscripts)/mkfloat.csh i386 -d $(DIRS)
	;
f68881:					# install f68881 binaries
	$verbose off
	$set DIRS = "lib pkg"
	!$(hscripts)/mkfloat.csh f68881 -d $(DIRS)
	;
ffpa:					# install ffpa binaries
	$verbose off
	$set DIRS = "lib pkg"
	!$(hscripts)/mkfloat.csh ffpa -d $(DIRS)
	;
fswitch:				# install fswitch binaries
	$verbose off
	$set DIRS = "lib pkg"
	!$(hscripts)/mkfloat.csh fswitch -d $(DIRS)
	;
fsoft:					# install fsoft binaries
	$verbose off
	$set DIRS = "lib pkg"
	!$(hscripts)/mkfloat.csh fsoft -d $(DIRS)
	;
linux:					# install PC Linux binaries
	$verbose off
	$set DIRS = "lib pkg"
	!$(hscripts)/mkfloat.csh linux -d $(DIRS)
	;
macosx:					# install MacOSX binaries
	$verbose off
	$set DIRS = "lib pkg"
	!$(hscripts)/mkfloat.csh macosx -d $(DIRS)
	;
freebsd:					# install PC Linux binaries
	$verbose off
	$set DIRS = "lib pkg"
	!$(hscripts)/mkfloat.csh freebsd -d $(DIRS)
	;
redhat:					# install PC Linux binaries
	$verbose off
	$set DIRS = "lib pkg"
	!$(hscripts)/mkfloat.csh redhat -d $(DIRS)
	;
suse:                                   # install Suse binaries
        $verbose off
        $set DIRS = "lib pkg"
        !$(hscripts)/mkfloat.csh suse -d $(DIRS)
        ;
pg:					# install -pg -f68881 binaries
	$verbose off
	$set DIRS = "lib pkg"
