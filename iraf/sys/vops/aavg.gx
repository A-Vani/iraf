# AAVG -- Compute the mean and standard deviation (sigma) of a sample.
# All pixels are used.

procedure aavg$t (a, npix, mean, sigma)

PIXEL	a[ARB]
size_t	npix
$if (datatype == dl)
double	mean, sigma, lcut, hcut
$else
real	mean, sigma, lcut, hcut
$endif
size_t	junk
size_t	awvg$t()
data	lcut /0./, hcut /0./

begin
	junk = awvg$t (a, npix, mean, sigma, lcut, hcut)
end
