# AABS -- Compute the absolute value of a vector (generic).

procedure aabs$t (a, b, npix)

PIXEL	a[ARB], b[ARB]
size_t	npix, i
$if (datatype == sl)
PIXEL	$tabs()
$endif

begin
$if (datatype == sil)
	do i = 1, npix
	    b[i] = $tabs(a[i])
$else
	do i = 1, npix
	    b[i] = abs(a[i])
$endif
end
