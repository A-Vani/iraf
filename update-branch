#!/bin/sh

set -e

branches="
  add-travis-ci
  remove-java-classes
  Cleanup-external
  Remove-doswin
  Cleanup-local
  move_documentation_to_doc
  Remove-test-tar
  Further-cleanup
  fix-no-iraf-root
  Dont-remove-sticky-bit-for-tmp
  Cleanup-generated-files
  fix-osb-symlinks
  replace-numerical-recipes
  use-sh-in-mklibs
  no-lib64
  build-vendor-before-novos
  linux64-zvsjmp
"
git checkout -f branch-merger-base
git branch -D merge-all || true
git checkout -b merge-all

for b in $branches ; do
    echo "******************" $b "******************" 
    git merge --no-edit $b
done
